[ server_ext ]
basicConstraints = CA:FALSE
keyUsage = nonRepudiation, digitalSignature, keyEncipherment
subjectAltName=DNS:example.com,DNS:www.example.com,DNS:api.example.com,DNS:login.example.com,DNS:api-internal.example.com,DNS:oauthagent-internal.example.com,DNS:login-internal.example.com
